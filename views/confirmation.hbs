<div class="container" id"maps_container">
  <head>
    <style>
      #map {
        height: 800px;
        width: 100%;
       }
    </style>
  </head>
  <body>
    <h3>Your pickup location:</h3>
    <div id="map"></div>
    <script>
      function initMap() {
        var uluru = {{google_location}};
        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 17,
          center: uluru
        });
        var marker = new google.maps.Marker({
          position: uluru,
          map: map
        });
      }
    </script>
    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCe5Owcj0cRZ6QeR8XHsJOIdsTvvpTbuyU&callback=initMap">
    </script>
  </body>
